{
  "name": "server",
  "version": "1.0.0",
  "description": "Job Importer Server - Scalable job import system with Redis queue processing",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon src/index.ts",
    "dev:watch": "nodemon --watch src --ext ts --exec ts-node src/index.ts",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "postbuild": "cp -r src/config dist/ 2>/dev/null || true",
    "lint": "tsc --noEmit",
    "test": "echo \"Error: no test specified\" && exit 1",
    "worker": "ts-node src/workers/jobImportWorker.ts",
    "scheduler": "ts-node src/scheduler/cronScheduler.ts"
  },
  "keywords": [
    "job-importer",
    "queue-processing",
    "bullmq",
    "redis",
    "mongodb",
    "typescript",
    "express"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.10.0",
    "bullmq": "^5.56.5",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "ioredis": "^5.6.1",
    "mongoose": "^8.16.4",
    "morgan": "^1.10.1",
    "node-cron": "^4.2.1",
    "winston": "^3.17.0",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.0.15",
    "@types/node-cron": "^3.0.11",
    "@types/xml2js": "^0.4.14",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "ignore": [
      "src/**/*.spec.ts",
      "src/**/*.test.ts"
    ],
    "exec": "ts-node src/index.ts"
  }
}
